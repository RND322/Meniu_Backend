{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2023",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "noFallthroughCasesInSwitch": false,

    "rootDir": "./src",            // Indica donde está tu código
    "esModuleInterop": true,       // Permite usar 'import x from "x"'
    "strict": true,               // Activa todas las verificaciones estrictas
    "types": ["reflect-metadata", "multer", "jest"] // Tipos globales
  },
  "include": ["src/**/*"]
}

